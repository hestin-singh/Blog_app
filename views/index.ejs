<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui horizontal ">
        <% blogs.forEach(function(blog) { %>
            <h1><%= blog.title %></h1>
            <img id="image" class="ui small image" src="<%= blog.image%>" alt="imagetitle">
            <div id="delete">
                <span><%= blog.created.toDateString() %></span>            
               <p><%= blog.body.substring(1, 100) %>....</p>
                <a class="ui basic floated basic violet button" href="/blogs/<%= blog._id %>" >Read more  </a>
        </div>
        
        <% }) %>

    </div>
   

</div>
<% include partials/footer %>